#!/bin/bash
rm -rf dist/*
NODE_ENV="production" npm run build

cp CREDITS.md dist
cd dist
sed -i "s/{{version}}/$TRAVIS_BUILD_NUMBER/" index.html

if [[ $TRAVIS_TAG != "" ]]; then 
    version=$(echo $TRAVIS_TAG | sed "s/v//")
    sed -i "s/0\.0\.0/$version/" manifest.json; 
fi

zip -r ../extension.zip *

BASETAG='<base href=\"https\:\/\/talenfisher.github.io\/fix3p\">';
sed -i "s/<\/head>/$BASETAG\0/" index.html

git add .
git commit -m "Pages build $TRAVIS_BUILD_NUMBER"
git push --quiet

cd ../